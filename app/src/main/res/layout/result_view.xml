<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kathi.project.recipify.MainActivity"
    android:background="@drawable/background_image">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/food_textview"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/nutrient_box"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/warning_textview"
            android:layout_width="269dp"
            android:layout_height="90dp"
            android:background="@drawable/warning_box"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.051" />

        <TextView
            android:id="@+id/nutrient_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUTRIENTS"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/nutrient_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/warning_textview"
            app:layout_constraintVertical_bias="0.347" />

        <TextView
            android:id="@+id/nutrient_textview"
            android:layout_width="268dp"
            android:layout_height="92dp"
            android:background="@drawable/nutrient_box"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/warning_textview"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.376" />

        <TextView
            android:id="@+id/nutrient_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Recipe"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/link1_textview"
            app:layout_constraintEnd_toEndOf="@+id/nutrient_textbox"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/nutrient_textbox"
            app:layout_constraintTop_toBottomOf="@+id/nutrient_textview"
            app:layout_constraintVertical_bias="0.529" />

        <Button
            android:id="@+id/link2_textview"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hyperlink_2"
            android:gravity="center"
            android:text="TextView"
            android:foreground="?android:attr/selectableItemBackground"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/link1_textview" />

        <Button
            android:id="@+id/link1_textview"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/hyperlink_1"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:foreground="?android:attr/selectableItemBackground"

            app:layout_constraintStart_toStartOf="@+id/link2_textview"
            app:layout_constraintTop_toBottomOf="@+id/nutrient_textview" />

        <Button
            android:id="@+id/link3_textview"
            android:layout_width="270dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/hyperlink_3"
            android:foreground="?android:attr/selectableItemBackground"

            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/link2_textview"
            app:layout_constraintTop_toBottomOf="@+id/link2_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>